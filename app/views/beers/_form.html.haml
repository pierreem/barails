= form_for @beer do |f|
  - if @beer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@beer.errors.count, "error")} prohibited this beer from being saved:"
      %ul
        - @beer.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :brand
    = f.text_field :brand
  .nested_fields
    %h3 Notes:
    -@beer.notes.each do |note|
      .field
        = f.fields_for :notes, note do |fn|
          = render "note" , fn: fn
  .field
    = f.label :cl
    = f.text_field :cl
  .actions
    = f.submit I18n.t('actions.save')
